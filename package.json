{
    "name": "TopCliente",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "clear": "rm -rf node_modules && cd android && ./gradlew clean && cd app && rm -rf build && cd ../../ && rm -rf yarn.lock && yarn cache clean && npm cache clean --force && watchman watch-del-all && yarn",
        "compile:release": "react-native bundle --platform android --dev false --entry-file index.android.js --bundle-output android/app/src/main/assets/index.android.bundle --assets-dest android/app/src/main/res/ && cd android/app/src/main/res && rm -rf drawable-hdpi drawable-mdpi drawable-xhdpi drawable-xxhdpi drawable-xxxhdpi && cd ../../../../../ && react-native run-android --variant release",
        "jest": "jest --maxWorkers=4",
        "tsc:w": "tsc --watch",
        "test:w": "jest --watch",
        "test:c": "jest --coverage",
        "version": "./version/version-ios.sh",
        "start": "adb reverse tcp:8081 tcp:8081 && react-native start",
        "lint": "eslint --ext .js,.jsx,.ts,.tsx ./src",
        "detox:build": "detox build --configuration ios.sim.release",
        "detox:test": "detox test --configuration ios.sim.release",
        "i18n-dts": "i18n-dts",
        "i18n-dts:watch": "i18n-dts -w"
    },
