        "eslint-plugin-react-hooks": "^2.3.0",
        "husky": "^3.1.0",
        "i18n-dts": "^0.2.0",
        "jest": "^24.9.0",
        "jest-enzyme": "^7.1.2",
        "jest-mock-axios": "^3.1.2",
        "jest-react-native": "^18.0.0",
        "jetifier": "^1.6.4",
        "jsdom": "^15.2.1",
        "metro-react-native-babel-preset": "0.59.0",
        "prettier": "^1.19.1",
        "react-dom": "^16.12.0",
        "react-native-svg-transformer": "^0.14.2",
        "react-native-typescript-transformer": "^1.2.12",
        "react-test-renderer": "^16.12.0",
        "redux-mock-store": "^1.5.3",
        "typescript": "^3.6.4"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn tsc && yarn jest -o && yarn lint ./src",
            "pre-push": "yarn tsc && yarn lint ./src && yarn jest"
        }
    },
    "detox": {
        "configurations": {
            "ios.sim.release": {
                "binaryPath": "build/Build/Products/Release-iphonesimulator/TopCliente.app",
                "build": "xcodebuild -workspace ios/TopCliente.xcworkspace -UseNewBuildSystem=NO -scheme TopCliente -configuration Release -sdk iphonesimulator -derivedDataPath build",
                "type": "ios.simulator",
                "name": "iPhone X"
            },
            "ios.sim.debug": {
                "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/TopCliente.app",
                "build": "xcodebuild -workspace ios/TopCliente.xcworkspace -scheme TopCliente -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build",
                "type": "ios.simulator",
                "name": "iPhone X"
            }
        },
        "test-runner": "jest"
    },
    "i18n-dts": {
        "model": "./src/i18n/languages/pt.ts",
        "outputDir": "./typings"
    }
}
